# ===========================================
# AI Call Quality Auditor - Environment Variables
# ===========================================
# Copy this file to .env and replace the values
# Command: cp sample.env .env
# ===========================================

# -------------------------------------------
# OpenAI API Configuration (REQUIRED)
# -------------------------------------------
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# -------------------------------------------
# Database Configuration (Supabase PostgreSQL)
# -------------------------------------------
# Get these from your Supabase project:
# Go to: Project Settings > Database > Connection string
# Use the "URI" format connection string

# Supabase Database URL (PostgreSQL)
# Format: postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres
DATABASE_URL=postgresql://postgres.xxxxxxxxxxxx:your-password-here@aws-0-us-east-1.pooler.supabase.com:6543/postgres

# -------------------------------------------
# Supabase Storage Configuration (REQUIRED for Vercel)
# -------------------------------------------
# Get these from your Supabase project:
# Go to: Project Settings > API

# Supabase Project URL
SUPABASE_URL=https://xxxxxxxxxxxx.supabase.co

# Supabase Anonymous Key (public, safe for client-side)
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.xxxxxxxxxx

# Supabase Service Role Key (private, server-side only - KEEP SECRET!)
# This key has full access to your project - never expose it client-side
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.xxxxxxxxxx

# -------------------------------------------
# Vercel Cron Job Security (REQUIRED for production)
# -------------------------------------------
# Generate a random secret for cron job authentication
# Used to protect the /api/calls/cleanup-expired endpoint
# Generate with: openssl rand -hex 32
CRON_SECRET=your-random-secret-here

# -------------------------------------------
# Application Settings (Optional)
# -------------------------------------------
# Environment: development, staging, production
APP_ENV=development

# Debug mode (set to false in production)
DEBUG=true

# Server host and port (for local development)
HOST=0.0.0.0
PORT=8000

# -------------------------------------------
# File Upload Settings (Optional)
# -------------------------------------------
# Maximum upload size in MB (default: 25MB - Whisper API limit)
MAX_UPLOAD_SIZE_MB=25

# Allowed audio formats
ALLOWED_AUDIO_FORMATS=mp3,wav,m4a,webm,ogg

# Recording retention period in days (default: 3)
RECORDING_RETENTION_DAYS=3
